import java.util.Scanner;

class Egor{
  public static void main(String[] args){
    Scanner sc = new Scanner(System.in);
    int n = sc.nextInt();
    double z = 0;
    for (int i = 1;i<=n;i++){
      String s = sc.next();
      int p = sc.nextInt();
      z+=p;
     }
     System.out.print(z/n);
    }
}
